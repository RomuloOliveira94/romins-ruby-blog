<section class="min-h-[80vh]">
  <ul>
      <% @articles.each do |article| %>
        <% unless article.archived? %>
          <li>     
              <%= link_to article.title, article %>
              -
              <%= link_to "Editar", edit_article_path(article) %>
          </li>
        <% end %>
      <% end %>

  </ul>
  <h2>Criar novo Artigo</h2>    
  <%= link_to "New Article", new_article_path %>
</section>
